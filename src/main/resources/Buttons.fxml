<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="562.0" prefWidth="1167.0" spacing="10" style="-fx-alignment: center;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.wine2.ButtonsController">

    <Button onAction="#handleFetchData" prefHeight="52.0" prefWidth="182.0" text="Show Data" />
    <ComboBox fx:id="colorComboBox" prefHeight="44.0" prefWidth="182.0" promptText="Chose Color" style="-fx-background-color: #ffff;" styleClass="Border">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Red" />
                <String fx:value="White" />
            </FXCollections>
        </items>
    </ComboBox>
    <Button onAction="#handleFetchpH" prefHeight="52.0" prefWidth="182.0" text="Fetch pH" />
    <Button onAction="#handleCounterRedWhite" prefHeight="44.0" prefWidth="182.0" text="Counter Red/White" />
    <Button onAction="#handleSelectMaxMin" prefHeight="44.0" prefWidth="182.0" text="Select Max/Min" />

    <!-- إضافة TextField لإدخال قيمة pH -->
    <TextField fx:id="pHValueField" maxHeight="300.0" maxWidth="182.0" minHeight="37.0" minWidth="200.0" prefHeight="44.0" prefWidth="180.0" promptText="Enter pH value" />
    <Button onAction="#handlePHSmallerThan" prefHeight="44.0" prefWidth="182.0" text="pH &lt; User Input" />
</VBox>
